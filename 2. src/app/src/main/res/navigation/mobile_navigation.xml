<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_contact">

    <fragment
        android:id="@+id/navigation_contact"
        android:name="com.example.contactkapp.Activities.ui.contact.ContactFragment"
        android:label="Danh bạ"
        tools:layout="@layout/fragment_contact" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.contactkapp.Activities.ui.profile.ProfileFragment"
        android:label="Thông tin cá nhân"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_qrcode"
        android:name="com.example.contactkapp.Activities.ui.qrcode.QRCodeFragment"
        android:label="Quét mã QR"
        tools:layout="@layout/fragment_q_r_code" />
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.contactkapp.Activities.ui.settings.SettingsFragment"
        android:label="Cài đặt"
